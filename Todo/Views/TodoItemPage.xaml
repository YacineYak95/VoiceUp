<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Todo.TodoItemPage" x:Name="page" Title="Detail">
		<Grid>
					<Grid.RowDefinitions>
							<RowDefinition Height="3*" />
							<RowDefinition Height="7*" />
					</Grid.RowDefinitions>
		
			<Image Source="{Binding Picture}" HeightRequest="350" WidthRequest="400" Margin="8"  />

			<StackLayout Grid.Row="1" Margin="20" VerticalOptions="StartAndExpand">
		<StackLayout Orientation="Vertical" HorizontalOptions="Center">
				<Label Text="{Binding Name}" TextColor="#EC4280" FontAttributes="Bold" FontSize="26" Margin="8" />
				<Button Image="record.png" Clicked="OnRecognizeSpeechButtonClicked" />

			</StackLayout>
					<Label  Text="Let's do it Steven !! "/>
			</StackLayout>

		</Grid>


					
			

</ContentPage>